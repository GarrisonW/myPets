<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="25dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/imageview_pet_avatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/caretakerme_launcher"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name_title"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/caretakerme_text"/>

        <EditText xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:id="@+id/edittext_name"
            android:hint="@string/edittext_name_hint"
            android:textColor="@color/caretakerme_text_input"
            android:textColorHint="@color/caretakerme_hint"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:autoText="true" />
    </LinearLayout>


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/spinner_title_species"
                android:textColor="@color/caretakerme_text"
                android:typeface="normal"
                android:textIsSelectable="false"/>

            <Spinner xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:id="@+id/spinner_species"
                android:textAppearance="@android:style/TextAppearance.Small"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/breed_title"
                android:textColor="@color/caretakerme_text"/>

            <EditText xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:id="@+id/edittext_breed"
                android:hint="@string/edittext_breed_hint"
                android:textColor="@color/caretakerme_text_input"
                android:textColorHint="@color/caretakerme_hint"
                android:textAppearance="@android:style/TextAppearance.Small" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/spinner_title_color"
                android:textColor="@color/caretakerme_text"
                android:textIsSelectable="false"/>

            <Spinner xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:id="@+id/spinner_color"
                android:textAppearance="@android:style/TextAppearance.Small"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/spinner_title_frequency"
                android:textColor="@color/caretakerme_text"/>

            <EditText xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:paddingLeft="5dp"
                android:id="@+id/edittext_diet"
                android:hint="@string/edittext_diet_hint"
                android:textColor="@color/caretakerme_text_input"
                android:textColorHint="@color/caretakerme_hint"
                android:textAppearance="@android:style/TextAppearance.Small" />

            <Spinner xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:id="@+id/spinner_frequency"
                android:textAppearance="@android:style/TextAppearance.Small"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/meds_title"
                android:textColor="@color/caretakerme_text"/>

            <EditText xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:id="@+id/edittext_medsFreeText"
                android:hint="@string/edittext_meds_hint"
                android:textColor="@color/caretakerme_text_input"
                android:textColorHint="@color/caretakerme_hint"
                android:textAppearance="@android:style/TextAppearance.Small" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/microchip_title"
                android:textColor="@color/caretakerme_text"/>

            <EditText xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittext_microchip"
                android:hint="@string/edittext_microchip_hint"
                android:textColor="@color/caretakerme_text_input"
                android:textColorHint="@color/caretakerme_hint"
                android:textAppearance="@android:style/TextAppearance.Small" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/other_title"
                android:textColor="@color/caretakerme_text"/>

            <EditText xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:id="@+id/edittext_otherFreeText"
                android:hint="@string/edittext_other_hint"
                android:textColor="@color/caretakerme_text_input"
                android:textColorHint="@color/caretakerme_hint"
                android:textAppearance="@android:style/TextAppearance.Small" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>